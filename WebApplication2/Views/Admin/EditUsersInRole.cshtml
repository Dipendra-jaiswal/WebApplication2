@model List<EditUserRoleViewModel>
@{
    ViewData["Title"] = "EditUsersInRole";

    var roleId = ViewBag.roleId;
    var roleName = ViewBag.roleName;
}

<h1>Edit Users In Role</h1>

<div class="card mb-3">
    <form id="form1" method="post" asp-action="EditUsersInRole" asp-controller="Admin" asp-route-roleId="@roleId">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="card-header">
           <h1>Add or Remove users from this roles</h1>
            <h1>RoleName - @roleName </h1>
        </div>
       
            <div class="card-body">
               
                    @for (int i = 0; i < Model.Count; i++)
                    {
                            <div class="form-check m-1">
                                <input type="hidden" asp-for="@Model[i].UserId" />
                                <input type="hidden" asp-for="@Model[i].UserName" />
                                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                                <label class="form-check-label" asp-for="@Model[i].IsSelected">@Model[i].UserName</label>
                            </div>
                    }
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
       
    </form>

</div>

