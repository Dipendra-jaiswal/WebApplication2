@model CreateRoleViewModel
@{
    ViewData["Title"] = "Create Role";
}

<h1>Create Role</h1>
<div class="row">
    <form id="form1" method="post" asp-controller="Admin" asp-action="CreateRole" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div>
            <input id="RoleName" asp-for="RoleName" placeholder="RoleName" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
        <div>
            <button type="submit">Create Role</button>
        </div>


    </form>

</div>
