@model UserClaimsViewModel

@{
    ViewData["Title"] = "ManageUserClaims";
}

<h1>ManageUserClaims</h1>

<div class="card mb-3">
    <form id="form1" method="post" asp-action="ManageUserClaims" asp-controller="Admin" asp-route-userId="@Model.UserId">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="card-header">
            <h1>Manage users Claim</h1>
        </div>

        <div class="card-body">

            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <div class="form-check m-1">
                   <input type="hidden" asp-for="@Model.Claims[i].ClaimType" />
                   <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">@Model.Claims[i].ClaimType</label>
                </div>
            }
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="EditUser" asp-controller="Admin" asp-route-Id="@Model.UserId" class="btn btn-primary">Cancle</a>
        </div>

    </form>

</div>





