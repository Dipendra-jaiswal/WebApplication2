@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "GetRoleList";
}

<h1>Get Role List</h1>
<div><a asp-controller="Admin" asp-action="CreateRole" class="btn btn-primary">Add New Role</a></div>
@if (Model.Any()) {

    foreach (var role in Model)
    {
            <div class="card mb-3">
                <div class="card-header">
                    Role Id: @role.Id
                </div>
                <div class="card-body">
                    <h5 class="card-title">@role.Name</h5>
                </div>
                <div class="card-footer">
                    <a asp-controller="Admin" asp-action="EditRole" asp-route-Id="@role.Id" class="btn btn-primary">Edit</a>
                    <a class="btn btn-primary">Delete</a>
                </div>
            </div>
    }

}
