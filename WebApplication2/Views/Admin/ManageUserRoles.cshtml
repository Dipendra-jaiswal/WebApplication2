@model List<ManageUserRoleViewModel>
@{
    ViewData["Title"] = "ManageUserusers";

    var userId = ViewBag.userId;
    var userName = ViewBag.userName;
}

<h1>ManageUserusers</h1>

<div class="card mb-3">
    <form id="form1" method="post" asp-action="ManageUserRoles" asp-controller="Admin" asp-route-userId="@userId">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="card-header">
            <h1>Add or Remove users from this users</h1>
            <h1>userName - @userName </h1>
        </div>

        <div class="card-body">

            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">@Model[i].RoleName</label>
                </div>
            }
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="EditUser" asp-controller="Admin" asp-route-Id="@userId" class="btn btn-primary">Cancle</a>
        </div>

    </form>

</div>



